<%= form_for(@snippet) do |f| %>
  <% if @snippet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@snippet.errors.count, "error") %> prohibited this snippet from being saved:</h2>

      <ul>
      <% @snippet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'text_field', :placeholder => 'Snippet Name' %>
  </div>
  <div class="field">
    <%= f.label :language %>
    <%= f.select :language, options_for_select([["CSS", "css"],["HTML", "html"], ["JavaScript", "javascript"],["Ruby", "ruby"],["Markdown","markdown"],["PHP","php"],["Apache","apache"],["Nginx","nginx"]]) %>
  </div>
  <div class="field">
    <%= f.label :plain_code, "Source Code" %>
    <%= f.text_area :plain_code, :rows => '7' %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', :class => 'btn-large btn-primary' %>
  </div>
<% end %>
